############################################
# ✅ GZIP Compression (All File Types)
############################################
<IfModule mod_deflate.c>
  # Text files
  AddOutputFilterByType DEFLATE text/plain text/html text/xml text/css text/javascript text/x-component
  AddOutputFilterByType DEFLATE application/javascript application/x-javascript application/json
  AddOutputFilterByType DEFLATE application/xml application/xhtml+xml application/rss+xml application/atom_xml
  AddOutputFilterByType DEFLATE application/vnd.ms-fontobject application/x-font-ttf font/opentype font/otf image/svg+xml

  # Fonts
  AddOutputFilterByType DEFLATE font/ttf font/otf font/woff font/woff2

  # Media Files (browser supported compression formats)
  AddOutputFilterByType DEFLATE audio/ogg video/ogg application/ogg

  # Browser-specific rules
  BrowserMatch ^Mozilla/4 gzip-only-text/html
  BrowserMatch ^Mozilla/4\.0[678] no-gzip
  BrowserMatch \bMSIE !no-gzip !gzip-only-text/html
</IfModule>

<IfModule mod_headers.c>
  Header append Vary User-Agent
</IfModule>

############################################
# ✅ Leverage Browser Caching
############################################
<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresDefault "access plus 1 month"

  # Images
  ExpiresByType image/jpg "access plus 1 year"
  ExpiresByType image/jpeg "access plus 1 year"
  ExpiresByType image/gif "access plus 1 year"
  ExpiresByType image/png "access plus 1 year"
  ExpiresByType image/webp "access plus 1 year"
  ExpiresByType image/svg+xml "access plus 1 year"
  ExpiresByType image/x-icon "access plus 1 year"

  # Fonts
  ExpiresByType font/woff "access plus 1 year"
  ExpiresByType font/woff2 "access plus 1 year"
  ExpiresByType application/font-woff "access plus 1 year"
  ExpiresByType application/font-woff2 "access plus 1 year"

  # Video
  ExpiresByType video/mp4 "access plus 1 year"
  ExpiresByType video/webm "access plus 1 year"
  ExpiresByType video/ogg "access plus 1 year"

  # Audio
  ExpiresByType audio/ogg "access plus 1 year"
  ExpiresByType audio/mp3 "access plus 1 year"

  # CSS & JS
  ExpiresByType text/css "access plus 1 year"
  ExpiresByType text/javascript "access plus 1 year"
  ExpiresByType application/javascript "access plus 1 year"
</IfModule>

############################################
# ✅ Cache-Control Headers (Improves CDN behavior)
############################################
<IfModule mod_headers.c>
  <FilesMatch "\.(ico|jpe?g|png|gif|webp|svg|woff|woff2|ttf|otf|eot|css|js|mp4|ogg|webm|mp3)$">
    Header set Cache-Control "public, max-age=31536000, immutable"
  </FilesMatch>
</IfModule>

############################################
# ✅ CDN Optimization Hint (for self-hosted content)
############################################
# If using a CDN like Cloudflare, BunnyCDN, etc., this helps them aggressively cache:
<IfModule mod_headers.c>
  Header set Access-Control-Allow-Origin "*"
</IfModule>

############################################
# ✅ Prevent MIME Sniffing
############################################
<IfModule mod_headers.c>
  Header set X-Content-Type-Options "nosniff"
</IfModule>

############################################
# ✅ Compress .svg, .xml, .json, and .webmanifest manually (fallback)
############################################
<IfModule mod_mime.c>
  AddType application/json .json
  AddType image/svg+xml .svg
  AddType application/manifest+json .webmanifest
</IfModule>


RewriteEngine On

# Redirect to https://www.smb.ke
RewriteCond %{HTTP_HOST} !^www\.smb\.ke$ [NC,OR]
RewriteCond %{HTTPS} off
RewriteRule ^ https://www.smb.ke%{REQUEST_URI} [L,R=301]

# Remove .html from URLs externally
RewriteCond %{THE_REQUEST} \s/([^.]+)\.html [NC]
RewriteRule ^ /%1 [R=301,L]

# Internally map /page → /page.html if it exists
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME}.html -f
RewriteRule ^(.*)$ $1.html [L]
